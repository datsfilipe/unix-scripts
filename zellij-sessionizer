#!/usr/bin/env bash

plugin="file://$ZELLIJ_SWITCH_PATH"

while [[ "$#" -gt 0 ]]; do
  case $1 in
    --plugin) plugin="file://$2"; shift ;;
    *) 
      echo "unexpected argument: $1" >&2
      exit 1
      ;;
  esac
  shift
done

if [[ -z $plugin ]]; then
  echo "plugin not specified" >&2
  exit 1
fi

selected=$(fd --type d --max-depth 1 --min-depth 1 . ~/www/s/**/* ~/www/w/**/* | fzf)
session_name=$(basename "$selected" | tr . _)

if [[ -d $1 ]]; then
  exit 0
fi

zellij_running=$(pgrep zellij)

if [[ -z $ZELLIJ ]] && [[ -z $zellij_running ]]; then
  cd $selected
  zellij attach $session_name -c
  exit 0
fi

if timeout 2s zellij pipe --plugin "$plugin" --skip-plugin-cache -- "--session $session_name --cwd $selected"; then
  exit 0
fi

echo "plugin pipe timed out, most probable cause is a permission issue, so give proper permissions to the plugin and try again."
zellij action launch-plugin "$plugin" --skip-plugin-cache
